/* pages/index/index.wxss */
.page {
  background-color: #f5f5f5;
}

/* 头部横幅 */
.header-banner {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.banner-bg {
  width: 100%;
  height: 100%;
}

.banner-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.5));
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}

.banner-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.banner-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 快速操作 */
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.refresh-btn {
  font-size: 28rpx;
  color: #1976D2;
  font-weight: normal;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.action-item:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

/* 场地状态 */
.court-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.court-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 6rpx solid #1976D2;
}

.court-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.court-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.court-type {
  font-size: 24rpx;
  color: #666;
}

.court-price {
  font-size: 28rpx;
  color: #1976D2;
  font-weight: bold;
  margin-right: 20rpx;
}

.court-status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 今日预约 */
.booking-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.booking-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.booking-info {
  display: flex;
  flex-direction: column;
}

.booking-court {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.booking-time {
  font-size: 24rpx;
  color: #666;
}

.booking-status {
  font-size: 24rpx;
  color: #4CAF50;
  font-weight: bold;
}

/* 公告通知 */
.notice-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.notice-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.notice-dot {
  width: 12rpx;
  height: 12rpx;
  background: #1976D2;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.notice-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.notice-time {
  font-size: 24rpx;
  color: #999;
}

/* 联系信息 */
.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-label {
  font-size: 28rpx;
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.contact-value[data-phone] {
  color: #1976D2;
  text-decoration: underline;
}